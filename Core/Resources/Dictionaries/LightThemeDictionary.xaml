<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBackground" Color="#EEEEF2" />
    <SolidColorBrush x:Key="AdditionBackground" Color="White" />
    <SolidColorBrush x:Key="BrightBackground" Color="#D67540" />

    <SolidColorBrush x:Key="ElementBackground" Color="White" />
    <SolidColorBrush x:Key="CoveredElementBackground" Color="White" />

    <SolidColorBrush x:Key="BorderBackground" Color="#CCCEDB" />
    <SolidColorBrush x:Key="CoveredBorderBackground" Color="#006CBE" />

    <SolidColorBrush x:Key="MainForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="DisabledForeground" Color="#A2A4A5" />
    <SolidColorBrush x:Key="BrightForeground" Color="#0E70C0" />


    <BitmapImage x:Key="MinimizeIcon" UriSource="pack://application:,,,/Core;component/Resources/Icons/Light/Minimize.png" />
    <BitmapImage x:Key="MaximizeIcon" UriSource="pack://application:,,,/Core;component/Resources/Icons/Light/Maximize.png" />
    <BitmapImage x:Key="NormalizeIcon" UriSource="pack://application:,,,/Core;component/Resources/Icons/Light/Normalize.png" />
    <BitmapImage x:Key="CloseIcon" UriSource="pack://application:,,,/Core;component/Resources/Icons/Light/Close.png" />
</ResourceDictionary>